<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="game.fastgenius.MainActivity"
    android:background="@drawable/gradienti">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/PershkrimiLojes"
        android:layout_margin="10dp"
        android:id="@+id/gameDescription"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtUseri"
        android:layout_below="@+id/gameDescription"
        android:layout_alignRight="@+id/gameDescription"
        android:layout_alignEnd="@+id/gameDescription"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/btnFillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fillo tani!"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="160dp"
        android:textSize="16dp"
        android:background="@drawable/gradbut"
        android:layout_below="@+id/txtUseri"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="0:00"
        android:textSize="40dp"
        android:layout_below="@id/btnFillo"
        android:id="@+id/txTimeri"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="88dp"
        android:text="sec"
        android:layout_below="@id/btnFillo"
        android:layout_alignLeft="@id/txTimeri"
        android:visibility="invisible"
        />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbLayouti"
        android:layout_below="@+id/txTimeri"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_marginTop="10dp"
        android:weightSum="100">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="3dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_weight="50"
            android:enabled="false"
            android:textSize="40dp"
            android:background="@drawable/gradnr"
            android:id="@+id/btn1"
            android:visibility="gone"
            />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:enabled="false"
                android:text="2"
                android:background="@drawable/gradnr"
                android:textSize="40dp"
                android:visibility="gone"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:weightSum="100">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginRight="3dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:enabled="false"
                android:background="@drawable/gradnr"
                android:layout_weight="50"
                android:textSize="40dp"
                android:id="@+id/btn3"
                android:visibility="gone"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/btn4"
                android:paddingTop="15dp"
                android:enabled="false"
                android:paddingBottom="15dp"
                android:background="@drawable/gradnr"
                android:layout_weight="50"
                android:textSize="40dp"
                android:visibility="gone"
                />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:weightSum="100">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginRight="3dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:enabled="false"
                android:background="@drawable/gradnr"
                android:layout_weight="50"
                android:textSize="40dp"
                android:visibility="gone"
                android:id="@+id/btn5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/btn6"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:enabled="false"
                android:background="@drawable/gradnr"
                android:layout_weight="50"
                android:textSize="40dp"
                android:visibility="gone"
                />
        </TableRow>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="435dp"
            android:layout_height="239dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/foto2"
            android:layout_weight="10.75"/>
            <!--android:alpha=".85" kjo vendos alpherin-->

        <TableLayout>
            <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:id="@+id/txtPerfundimi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/txtKoha"/>
            </TableRow>
        </TableLayout>


    </TableLayout >


</RelativeLayout>
